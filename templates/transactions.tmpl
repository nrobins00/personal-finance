{{ define "Transactions" }}
	<div class="dropdown">
		<button onclick="showDropdown()">Filter Categories</button>
		<div class="dropdown-content">
			{{range .Categories}}
			<label><input type="checkbox" name="categories" value="{{.}}" checked>{{.}}</label>
			{{ end }}
		</div>

	</div>
	<table>
		<tr>
			<th class="col-date" onclick="updateSort('Date')">
				Date
				{{if eq .SortCol "Date" }}
					{{if eq .SortDir "desc"}}
						<i class="fas fa-sort-down"/>
					{{else}}
						<i class="fas fa-sort-up"/>
					{{end}}
				{{ else }}
					<i class="fas fa-sort"/>
				{{ end }}
			</th>
			<th class="col-account-name" onclick="updateSort('AccountName')">
				Account Name
				{{if eq .SortCol "AccountName" }}
					{{if eq .SortDir "desc"}}
						<i class="fas fa-sort-down"/>
					{{else}}
						<i class="fas fa-sort-up"/>
					{{end}}
				{{ else }}
					<i class="fas fa-sort"/>
				{{ end }}
			</th>
			<th class="col-category" onclick="updateSort('Category')">
				Category
				{{if eq .SortCol "Category" }}
					{{if eq .SortDir "desc"}}
						<i class="fas fa-sort-down"/>
					{{else}}
						<i class="fas fa-sort-up"/>
					{{end}}
				{{ else }}
					<i class="fas fa-sort"/>
				{{ end }}
			</th>
			<th class="col-amount" onclick="updateSort('Amount')">
				Amount
				{{if eq .SortCol "Amount" }}
					{{if eq .SortDir "desc"}}
						<i class="fas fa-sort-down"/>
					{{else}}
						<i class="fas fa-sort-up"/>
					{{end}}
				{{ else }}
					<i class="fas fa-sort"/>
				{{ end }}
			</th>
		</tr>
	{{ range .Transactions }}
		<tr data-category="{{.CategoryDetailed}}">
			<td class="col-date">{{.AuthorizedDttm}}</td>
			<td class="col-account-name">{{.AccountName}}</td>
			<td class="col-category">{{.CategoryDetailed}}</td>
			<td class="col-amount">{{.Amount}}</td>
		</tr>
	{{ else }}
		<tr>
			<td colspan="4">No transactions available</td>
		<tr>
	{{ end }}
	</table>
{{ end }}

